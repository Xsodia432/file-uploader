generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  user_name String @unique
  first_name String
  last_name String?
  password String
  files Files[]
  file_shares User_file_shares[]
}
model Files{
  id String @id @default(uuid())
  file_name String
  file_size BigInt
  createdAt DateTime @default(now())
  shareable Boolean
  user Users @relation(fields: [user_id],references: [id])
  user_id String
  file_share_id User_file_shares[]
}
model User_file_shares{
  id String @id @default(uuid())
  file Files @relation(fields:[file_id],references: [id],onDelete: Cascade)
  file_id String 
  user Users @relation(fields: [user_id],references: [id])
  user_id String
}