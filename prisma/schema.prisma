generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  user_name String @unique
  password String
  file Files[]
  file_share FileShare[]
}
model Files{
  id String @id @default(uuid())
  name String
  file_name String? 
  file_size BigInt?
  createdAt DateTime @default(now())
  type String
  folder_id String?
  url String?
  user Users @relation(fields: [user_id],references: [id],onDelete: Cascade)
  user_id String
  file_share FileShare[]
  
}
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}
model FileShare{
  id String @id @default(uuid())
  file Files @relation(fields: [file_id],references: [id],onDelete: Cascade)
  file_id String
  user Users @relation(fields: [user_id],references: [id],onDelete: Cascade)
  user_id String
  expires_at DateTime?
}