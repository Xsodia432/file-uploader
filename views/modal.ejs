<div class="modal hide" id="modal-form">
  <div class="modal-container">
    <div class="modal-header">
      <h2>Create Folder</h2>
      <h1 id="modal-close-form">X</h1>
    </div>
    <div class="modal-body">
      <div id="error-containers" class="error-container"></div>
      <form
        style="
          display: flex;
          flex-direction: column;
          gap: 10px;
          margin-top: 10px;
        "
        id="form-submit-folder"
      >
        <div style="display: flex; flex-direction: column; gap: 5px">
          <label for="folder_name">Folder Name</label>
          <input
            type="text"
            name="folder_name"
            id="folder_name"
            class="default-field default"
          />
        </div>

        <button type="submit" class="default-btn default">Create</button>
      </form>
    </div>
  </div>
</div>

<div class="modal hide" id="modal-upload">
  <div class="modal-container">
    <div class="modal-header">
      <h2>Upload File</h2>
      <h1 id="modal-close-upload">X</h1>
    </div>
    <div class="modal-body">
      <div id="error-container" class="error-container"></div>
      <form
        style="
          display: flex;
          flex-direction: column;
          gap: 10px;
          margin-top: 10px;
        "
        id="form-submit-file"
      >
        <div style="display: flex; flex-direction: column; gap: 5px">
          <label for="file_name">File</label>
          <input
            type="file"
            name="file"
            id="file_name"
            class="default-field default"
          />
        </div>

        <button type="submit" class="default-btn default">
          Upload <span></span>
        </button>
      </form>
    </div>
  </div>
</div>
